{
  "name": "ags-api-mcp-server",
  "version": "2025.9.0",
  "description": "A simple Streamable HTTP-based MCP server with OAuth authorization",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && cp -r assets dist/ 2>/dev/null || true",
    "build+": "pnpm run format && pnpm run lint && pnpm run build",
    "start": "pnpm run start:stdio",
    "start:stdio": "TRANSPORT=stdio node dist/index.js",
    "start:http": "TRANSPORT=http node dist/index.js",
    "dev": "tsc --watch",
    "inspect": "pnpm run inspect:stdio",
    "inspect:stdio": "TRANSPORT=stdio pnpm dlx @modelcontextprotocol/inspector --transport stdio -e TRANSPORT=stdio node dist/index.js",
    "inspect:http": "TRANSPORT=http node dist/index.js & sleep 2 && pnpm dlx @modelcontextprotocol/inspector --transport http --server-url http://localhost:3000/mcp",
    "inspect:clean": "pkill -f '@modelcontextprotocol/inspector' || true && pkill -f 'node dist/index.js' || true",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "test": "pnpm run test:unit",
    "test:env": "node -r dotenv/config tests/test-server.js",
    "test:integration": "node tests/test-server.js",
    "test:unit": "NODE_ENV=test node --import tsx --test tests/**/*.test.ts",
    "type-check": "tsc --noEmit",
    "setup": "node setup-env.js",
    "process-specs": "node process-openapi-specs.js"
  },
  "keywords": [
    "mcp",
    "server",
    "oauth",
    "http",
    "streamable"
  ],
  "author": "",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.0",
    "axios": "^1.6.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "eventsource": "^4.0.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-client": "^2.0.5",
    "open": "^10.2.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.2",
    "yaml": "^2.6.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^24.7.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
